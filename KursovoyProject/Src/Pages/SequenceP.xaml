<Page x:Class="KursovoyProject.Src.Pages.SequenceP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursovoyProject.Src.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Остальные разделы">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox
            Grid.Row="0"
            Grid.Column="0">
            <Button 
            x:Name="btnAddition"
            Content="Угадай число"
            Style="{StaticResource TraverseButton}"
            Click="btnAddition_Click"/>
        </Viewbox >
        <Viewbox
            Grid.Row="1"
            Grid.Column="1">
            <Button 
            x:Name="btnSubtraction"
            Content="Тестирование"
            Style="{StaticResource TraverseButton}"
            Click="btnSubtraction_Click"/>
        </Viewbox >
    </Grid>
</Page>
